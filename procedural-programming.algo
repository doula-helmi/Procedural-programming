FUNCTION Dot_product(v1,v2:ARRAY_OF INTEGER) : INTEGER
VAR
    i:INTEGER
BEGIN
    FOR i FROM 0 TO v1.lenght-1 DO
        ps+=v1[i]*v2[i]
    END_FOR

    return ps;
END

